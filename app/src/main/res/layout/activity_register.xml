<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo2"
    tools:context="com.example.evelina.pooltraining.RegisterActivity">

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="47dp"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/editTextCognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Cognome"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="125dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTextNome"
        android:layout_alignLeft="@+id/editTextNome"
        android:layout_alignStart="@+id/editTextNome" />

    <EditText
        android:id="@+id/editTextMail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editTextCognome"
        android:layout_alignLeft="@+id/editTextCognome"
        android:layout_alignStart="@+id/editTextCognome" />

    <EditText
        android:id="@+id/editTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark"
        android:visibility="visible"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="296dp"
        android:layout_below="@+id/editTextMail2"
        android:layout_alignLeft="@+id/editTextMail2"
        android:layout_alignStart="@+id/editTextMail2"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/buttonRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="Registrazione"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="385dp" />
</RelativeLayout>
