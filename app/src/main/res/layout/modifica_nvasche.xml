<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNuovoNumeroVasche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:text="Numero Vasche:"
        android:textColor="@android:color/black"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerNumeriVasche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNuovoNumeroVasche"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textViewNuovoNumeroVasche"
        android:layout_toRightOf="@+id/textViewNuovoNumeroVasche" />

    <Button
        android:id="@+id/buttonConfermaModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:text="Conferma"
        android:layout_alignBaseline="@+id/buttonAnnullaModifica"
        android:layout_alignBottom="@+id/buttonAnnullaModifica"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonAnnullaModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Annulla"
        android:layout_below="@+id/spinnerNumeriVasche"
        android:layout_alignLeft="@+id/textViewNuovoNumeroVasche"
        android:layout_alignStart="@+id/textViewNuovoNumeroVasche"
        android:layout_marginTop="42dp" />

    </RelativeLayout >